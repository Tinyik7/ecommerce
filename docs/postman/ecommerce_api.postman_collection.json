{
  "info": {
    "name": "Echoes E-commerce API",
    "_postman_id": "5fa62f2c-8c5a-4d3f-8e2c-collection",
    "description": "Коллекция покрывает регистрацию, логин, каталог, избранное и корзину.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "users",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Demo User\",\n  \"email\": \"demo@echoes.app\",\n  \"password\": \"password\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const data = pm.response.json();",
              "if (data.token) {",
              "  pm.environment.set('jwtToken', data.token);",
              "  pm.environment.set('userId', data.id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "users",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"demo@echoes.app\",\n  \"password\": \"password\"\n}"
        }
      }
    },
    {
      "name": "Products - Filtered list",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/products?query=hoodie&minPrice=30&sortBy=price",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "products"
          ],
          "query": [
            {
              "key": "query",
              "value": "hoodie"
            },
            {
              "key": "minPrice",
              "value": "30"
            },
            {
              "key": "sortBy",
              "value": "price"
            }
          ]
        }
      }
    },
    {
      "name": "Favorites - Add",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/favorites/{{userId}}/add",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "favorites",
            "{{userId}}",
            "add"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": 1\n}"
        }
      }
    },
    {
      "name": "Cart - Snapshot",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/cart/{{userId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "cart",
            "{{userId}}"
          ]
        }
      }
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "jwtToken",
      "value": ""
    },
    {
      "key": "userId",
      "value": ""
    }
  ]
}



